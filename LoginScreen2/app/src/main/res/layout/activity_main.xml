<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_page"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/textView_companyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calorie Care"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40sp"
        tools:ignore="HardcodedText"/>
    <TextView
        android:id="@+id/textView_companySubName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A Nutrition Based Recipe Application"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:paddingBottom="80sp"
        tools:ignore="HardcodedText"/>
    <TextView
        android:id="@+id/textView_logInText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textSize="25sp"
        android:paddingBottom="20sp"
        tools:ignore="HardcodedText"/>
    <TextView
        android:id="@+id/textView_emailFieldHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Email Address"
        android:textAlignment="textStart"
        android:paddingLeft="3sp"
        android:textColor="@color/black"
        android:textSize="15sp"
        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"/>

    <!--android:hint="ex: abc@gmail.com"-->
    <EditText
        android:id="@+id/editText_emailField"
        android:text="Hasanrazu.cse.193.gub@gmail.com"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:textSize="15sp"
        tools:ignore="Autofill,LabelFor,hardcodedText" />
    <TextView
        android:id="@+id/textView_passwordFieldHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Password"
        android:paddingStart="3sp"
        android:paddingTop="20sp"
        android:textSize="15sp"
        tools:ignore="RtlSymmetry,hardcodedText" />


    <!--android:hint="*****"-->
    <EditText
        android:id="@+id/editText_passwordField"
        android:text="yourText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:paddingTop="15sp"
        android:paddingBottom="10sp"
        android:textSize="15sp"

        tools:ignore="Autofill,LabelFor,hardcodedText"/>

    <CheckBox
        android:id="@+id/checkBox_showPassword"
        android:text="show pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="hardcodedText"
        />
    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_signIn"
            android:text="Sign In"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:ignore="ButtonStyle,hardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_forgetPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Forgot Password?"
            tools:ignore="ButtonStyle,hardcodedText" />
        <Button
            android:id="@+id/button_signUp"
            android:text="Register Now"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:ignore="ButtonStyle,hardcodedText" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView_currentIdPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/textView_savedIdPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        />


</LinearLayout>

