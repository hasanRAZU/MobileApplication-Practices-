<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="7"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/row_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UselessParent">
        <TextView
            android:id="@+id/appName"
            android:text="Calculator By Razu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:background="@color/gray"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            tools:ignore="HardcodedText" />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/row_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_one">
        <TextView
            android:id="@+id/screen"
            android:hint="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:gravity="right"
            android:paddingTop="200dp"
            android:paddingBottom="20dp"
            tools:ignore="Autofill,HardcodedText,RtlHardcoded,TextFields" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/row_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_two"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_ac"
            android:text="AC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black"
            android:textSize="25sp"
            android:paddingBottom="10sp"
            android:paddingTop="10sp"
            tools:ignore="ButtonStyle,HardcodedText" />

        <Button
            android:id="@+id/button_delete"
            android:text="del"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black"
            android:textSize="25sp"
            android:paddingBottom="10sp"
            android:paddingTop="10sp"
            tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded" />

        <Button
            android:id="@+id/button_percentage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black"
            android:backgroundTint="@color/white"
            android:text="%"
            android:textSize="25sp"
            android:paddingBottom="10sp"
            android:paddingTop="10sp"
            tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded" />

        <Button
            android:id="@+id/button_division"
            android:text="/"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black"
            android:backgroundTint="@color/white"
            android:textSize="25sp"
            android:paddingBottom="10sp"
            android:paddingTop="10sp"
            tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/row_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:layout_below="@id/row_three"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_seven"
            android:text="7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_weight="1"
            android:textSize="25sp"
            android:paddingBottom="10sp"
            android:paddingTop="10sp"
            tools:ignore="ButtonStyle,HardcodedText" />
        <Button
            android:id="@+id/button_eight"
            android:text="8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_weight="1"
            android:textSize="25sp"
            android:paddingBottom="10sp"
            android:paddingTop="10sp"
            tools:ignore="ButtonStyle,HardcodedText" />
        <Button
            android:id="@+id/button_nine"
            android:text="9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_weight="1"
            android:textSize="25sp"
            android:paddingBottom="10sp"
            android:paddingTop="10sp"
            tools:ignore="ButtonStyle,HardcodedText" />
        <Button
            android:id="@+id/button_multiplication"
            android:text="*"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_weight="1"
            android:textSize="25sp"
            android:paddingBottom="10sp"
            android:paddingTop="10sp"
            tools:ignore="ButtonStyle,HardcodedText" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/row_five"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_four"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_four"
            android:text="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_weight="1"
            android:textSize="25sp"
            android:paddingBottom="10sp"
            android:paddingTop="10sp"
            tools:ignore="ButtonStyle,HardcodedText" />
        <Button
            android:id="@+id/button_five"
            android:text="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_weight="1"
            android:textSize="25sp"
            android:paddingBottom="10sp"
            android:paddingTop="10sp"
            tools:ignore="ButtonStyle,HardcodedText" />

        <Button
            android:id="@+id/button_six"
            android:text="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_weight="1"
            android:textSize="25sp"
            android:paddingBottom="10sp"
            android:paddingTop="10sp"
            tools:ignore="ButtonStyle,HardcodedText" />
        <Button
            android:id="@+id/button_subtraction"
            android:text="-"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_weight="1"
            android:textSize="25sp"
            android:paddingBottom="10sp"
            android:paddingTop="10sp"
            tools:ignore="ButtonStyle,HardcodedText" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/row_six"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_five"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_one"
            android:text="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_weight="1"
            android:textSize="25sp"
            android:paddingBottom="10sp"
            android:paddingTop="10sp"
            tools:ignore="ButtonStyle,HardcodedText" />
        <Button
            android:id="@+id/button_two"
            android:text="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_weight="1"
            android:textSize="25sp"
            android:paddingBottom="10sp"
            android:paddingTop="10sp"
            tools:ignore="ButtonStyle,HardcodedText" />

        <Button
            android:id="@+id/button_three"
            android:text="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_weight="1"
            android:textSize="25sp"
            android:paddingBottom="10sp"
            android:paddingTop="10sp"
            tools:ignore="ButtonStyle,HardcodedText" />
        <Button
            android:id="@+id/button_addition"
            android:text="+"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_weight="1"
            android:textSize="25sp"
            android:paddingBottom="10sp"
            android:paddingTop="10sp"
            tools:ignore="ButtonStyle,HardcodedText" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/row_seven"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_six"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_null"
            android:text="null"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_weight="1"
            android:textSize="25sp"
            android:paddingBottom="10sp"
            android:paddingTop="10sp"
            tools:ignore="ButtonStyle,HardcodedText" />

        <Button
            android:id="@+id/button_zero"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black"
            android:text="0"
            android:textSize="25sp"
            android:paddingBottom="10sp"
            android:paddingTop="10sp"
            tools:ignore="ButtonStyle,HardcodedText" />

        <Button
            android:id="@+id/button_dot"
            android:text="."
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_weight="1"
            android:textSize="25sp"
            android:paddingBottom="10sp"
            android:paddingTop="10sp"
            tools:ignore="ButtonStyle,HardcodedText" />
        <Button
            android:id="@+id/button_equal"
            android:text="="
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_weight="1"
            android:textSize="25sp"
            android:paddingBottom="10sp"
            android:paddingTop="10sp"
            tools:ignore="ButtonStyle,HardcodedText" />
    </LinearLayout>





</RelativeLayout>